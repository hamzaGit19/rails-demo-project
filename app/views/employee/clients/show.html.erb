 
<div class='row'>
<%= link_to 'Back', url_for(:back), class:'btn btn-secondary pull-right' %>
</div>
<div class='container main-secction'>
  <div class='row'>
    <div class='col-md-12 col-sm-12 col-xs-12 image-section'>
      <img src='https://png.pngtree.com/thumb_back/fw800/back_pic/00/08/57/41562ad4a92b16a.jpg'>
    </div>
    <div class='row user-left-part'>
      <div class='col-md-3 col-sm-3 col-xs-12 user-profil-part pull-left'>
      </div>
      <div class='col-md-9 col-sm-9 col-xs-12 pull-right profile-right-section'>
        <div class='row profile-right-section-row'>
          <div class='col-md-12 profile-header'>
            <div class='row'>
              <div class='col-md-8 col-sm-6 col-xs-6 profile-header-section1 pull-left'>
                <h1><%=@client.name%> </h1>
                <h5><%=@client.company%> </h5>
              </div>
              <div class='col-md-4 col-sm-6 col-xs-6 profile-header-section1 text-right pull-rigth'>
              </div>
            </div>
          </div>
          <div class='col-md-12'>
            <div class='row'>
              <div class='col-md-8'>
                <ul class='nav nav-tabs' role='tablist'>
                  <li class='nav-item'>
                    <a class='nav-link active' href='#profile' role='tab' data-toggle='tab'><i class='fas fa-user-circle'></i> Personal Infromation</a>
                  </li>
                  <li class='nav-item'>
                    <a class='nav-link' href='#buzz' role='tab' data-toggle='tab'><i class='fas fa-info-circle'></i> Other Information</a>
                  </li>
                    <li class='nav-item'>
                    <a class='nav-link' href='#projects' role='tab' data-toggle='tab'><i class='fas fa-info-circle'></i> Projects</a>
                  </li>
                </ul>
                <!-- Tab panes -->
                <div class='tab-content'>
                  <div role='tabpanel' class='tab-pane fade show active' id='profile'>
                    <div class='row'>
                      <div class='col-md-2'>
                        <label>ID</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.id%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-2'>
                        <label>Name</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.name%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-2'>
                        <label>Email</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.email%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-2'>
                        <label>Telephone</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.phone%></p>
                      </div>
                    </div>
                  </div>
                  <div role='tabpanel' class='tab-pane fade' id='buzz'>
                    <div class='row'>
                      <div class='col-md-6'>
                        <label>Company</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.company%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-6'>
                        <label>Company Phone</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.compnay_phone%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-6'>
                        <label>Total Projects</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=%>0</p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-6'>
                        <label>Country</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=@client.country%></p>
                      </div>
                    </div>
                    <div class='row'>
                      <div class='col-md-6'>
                        <label>Language</label>
                      </div>
                      <div class='col-md-6'>
                        <p><%=%>English</p>
                      </div>
                    </div>
                  </div>
                   <div role='tabpanel' class='tab-pane fade' id='projects'>
                    <% @client.projects.each do |project| %>
                      <div class='col-md-12'>
                        <label><%= link_to project.name, employee_project_path(project.id) %></label>
                      </div>
                    <%end%>
                  </div>
                </div>
              </div>
              <div class='col-md-4 img-main-rightPart'>
                <div class='row'>
                  <a href='http://camaradecomerciozn.com/'>
                    <div class='col-md-12 image-right'>
                      <img src='http://pluspng.com/img-png/bootstrap-png-bootstrap-512.png'>
                    </div>
                  </a>
                  <div class='col-md-12 image-right-detail-section2'>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
