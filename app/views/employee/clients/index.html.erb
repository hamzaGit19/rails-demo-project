<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span7">
    <div class="widget stacked widget-table action-table">
      <div class="widget-header">
        <i class="icon-th-list"></i>
        <h3>Projects</h3>
      </div>
      <!-- /widget-header -->
      <div class="widget-content">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Company</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |person| %>
              <tr>
                <td ><%=person.name%></td>
                <td><%=person.email%></td>
                <td><%=person.phone%></td>
                <td><%= person.company%></td>
                <td>
                  <span>
                    <%=link_to(employee_client_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>
                    <i class="fa fa-eye"></i>
                  <%end%> </span>
                 </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= paginate @clients %>
          </div>
        </div>
      </div>
  <!-- /widget-content -->    
    </div>
    <!-- /widget -->
  </div>
</div>
