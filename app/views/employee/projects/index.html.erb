<p id='notice'><%= notice %></p>
<%=render 'projects/search', url: employee_projects_path%>
<div class='row'>
  <div class='well'>
    <div class='span7'>
      <div class='widget stacked widget-table action-table'>
        <div class='widget-header'>
          <i class='icon-th-list'></i>
          <h3>Projects</h3>
        </div>
        <div class='widget-content'>
          <table class='table table-striped table-bordered'>
            <thead>
              <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th>Actions </th>
              </tr>
            </thead>
            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <td><%= project.description %></td>
                  <td>
                    <span> <%=link_to(employee_project_path(project), class:'btn btn-info btn-xs glyphicon glyphicon-edit') do %>   <i class='fa fa-eye'></i> <%end%> </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
