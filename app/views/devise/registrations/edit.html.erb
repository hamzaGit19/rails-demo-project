<%= link_to "Back", :back %>
<div class="row">
  <div class="col-md-8 offset-2">
    <div class="form-area">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="preview text-center">
          <img class="preview-img" src="http://simpleicon.com/wp-content/uploads/account.png" alt="Preview Image" width="200" height="200"/>
          <div class="browse-button">
            <i class="fa fa-pencil-alt"></i>
            <input class="browse-input" type="file" required name="UploadedFile" id="UploadedFile"/>
          </div>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>Full Name:</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"form-control" %>
          <span class="Error"></span>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group">
          <label>Email:</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>New Password:</label>
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>New Password:<i>(leave blank if you don't want to change it)</i></label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>Current Password:<i>(Enter your current password)</i></label>
          <%= f.password_field :current_password, autocomplete: "new-password",class:"form-control" %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>Type of user:</label>
          <%= f.select :type, options_for_status, {}, prompt: 'Select One' %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <%= f.submit "Edit",  class:"btn btn-primary btn-block" %>
          <%# <input class="btn btn-primary btn-block" type="submit" value="Submit"/> %>
        </div>
      <%end%>
    </div>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"form-control" %></p>
  </div>
</div>
<%= render "devise/shared/links" %>
