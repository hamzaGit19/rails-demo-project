<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {class: "form-signin"}  ) do |f| %>
            <div class="form-label-group">
              <label for="">Email address</label>
              <%= f.email_field :email, autofocus: true, placeholder: "email", id:"inputEmail", class:"form-control" %>
            </div>
            <div class="form-label-group">
              <%# <input type="password" id="inputPassword" class="form-control" placeholder="Password" required> %>
              <%= f.password_field :password, placeholder: "current-password",id:"inputPassword", class:"form-control" %>
              <label for="inputPassword">Password</label>
            </div>
            <div class="custom-control custom-checkbox mb-3">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>
            <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) , class:"btn text-uppercase"%>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
