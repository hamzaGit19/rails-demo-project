<div class="row">
  <div class="container col-md-5">
    <%= form_for(@user, url:  { action: "update_password" } ) do |f| %>
      <div class="form-group">
        <label>New Password:<i>(Min length: 6 characters)</i></label>
        <%= f.password_field :password, autocomplete: "off", class:"form-control" , required:true %>
      </div>
      <div class="form-group">
        <label>Password:<i>(Confirm Password)</i></label>
        <%= f.password_field :password_confirmation , class:"form-control, required:true"%>
      </div>
      <div class="action_container">
        <%= f.submit "Update password",  class:"btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
