<%= link_to "Prpfile", :back %>
<div class="row">
  <div class="col-md-8 offset-2">
    <div class="form-area">
      <%= form_for(@user, url:admin_user_path(@user)) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>
        <div class="preview text-center">
          <%if @user.image?%>
            <%= image_tag @user.image.thumb.url, class: "rounded-circle", width:"200", height:"200"%>
            <%# <img class="preview-img" src="http://simpleicon.com/wp-content/uploads/account.png" alt="Preview Image" width="200" height="200"/> %>
          <%else%>
            <%= image_tag @user.image.thumb.url, class: "rounded-circle", width:"200", height:"200"%>
          <%end%>
          <div class="browse-button">
            <i class="fa fa-pencil-alt"></i>
            <%= f.file_field :image ,  class:"browse-input" ,id:"UploadedFile"%>
            <%# <input class="browse-input" type="file" required name="UploadedFile" id="UploadedFile"/> %>
          </div>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>Full Name:</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"form-control" %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <label>Email:</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
          <span class="Error"></span>
        </div>
        <div class="form-group">
          <%= f.submit "Edit",  class:"btn btn-primary btn-block" %>
        </div>
      <%end%>
    </div>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class:"form-control" %></p>
  </div>
</div>
