<div class="container">
  <div class="col-md-8">
    <div class="form-area">
      <%= form_for(user, url:manager_user_path(@user)) do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <br style="clear:both">
        <h3 style="margin-bottom: 25px; text-align: center;">Edit user..</h3>
        <div class="form-group">
          <label>Name</label>
          <%= form.text_field(:name,  class: 'form-control input_user', placeholder: 'Name') %>
        </div>
        <div class="form-group">
          <label>Email</label>
          <%= form.text_field(:email,  class: 'form-control input_user', placeholder: 'Email') %>
        </div>
        <div class="form-group">
          <label>Type of user:</label>
          <%= form.text_field(:type,  class: 'form-control input_user', readonly: true) %>
          <span class="Error"></span>
        </div>
         <div class="form-group">
          <label>Current Status:</label>
          <%= form.text_field(:status,  class: 'form-control input_user', readonly: true) %>
          <span class="Error"></span>
        </div>
        
        <%= form.submit("Update", class:"btn btn-primary pull-right")%>
      <%end%>
    </div>
  </div>
</div>
