<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Edit client</h5>
          <%= form_for(@client, url:manager_client_path) do |f| %>
            <div class="form-group">
              <label>Full Name:</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "Name",class:"form-control" %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Email:</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", required:true %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Company:</label>
              <%= f.text_field :company, autofocus: true, autocomplete: "company",class:"form-control", required:true %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Phone:</label>
              <%= f.text_field :phone, autofocus: true, autocomplete: "Phone",class:"form-control", required:true %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Company Phone:</label>
              <%= f.text_field :compnay_phone, autofocus: true, autocomplete: "Company",class:"form-control", required:true %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Country:</label>
              <%= f.select :country, options_for_countries, {}, prompt: 'Select One', class:"form-control" %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label>Referred by:</label>
              <%= f.text_field :referred_by, autofocus: true, autocomplete: "Referred by(Company,person)",class:"form-control" %>
              <span class="Error"></span>
            </div>
            <% if current_page?(controller: 'admin/clients', action: 'new') %>
              <%= f.submit("Create", class:"btn btn-primary  btn-block")%>
            <% else %>
              <%= f.submit("Update", class:"btn btn-primary  btn-block")%>
            <%end%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>






 