<p id='notice'><%= notice  %></p>
<%= render 'clients/search', url: manager_clients_path %>
<div class='row'>
  <div class='well'>
    <div class='span7'>
      <div class='widget stacked widget-table action-table'>
        <div class='widget-header'>
          <i class='icon-th-list'></i>
          <%= link_to(new_manager_client_path, class:'btn btn-primary btn-xs pull-left' )do  %><i class='fa fa-eye'> Create client</i> <% end %>
        </div>
        <!-- /widget-header -->
        <div class='widget-content'>
          <table class='table table-striped table-bordered'>
            <thead>
              <tr class='table-top-headings'>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Company</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |person|  %>
                <tr >
                  <td><%= person.name %></td>
                  <td><%= person.email %></td>
                  <td><%= person.phone %></td>
                  <td><%= person.company %></td>
                  <td>
                    <span> <%= link_to(manager_client_path(person), class:'btn btn-info btn-xs glyphicon glyphicon-edit') do  %>   <i class='fa fa-eye'></i> <% end %> </span>
                    <span> <%= link_to(edit_manager_client_path(person), class:'btn btn-info btn-xs glyphicon glyphicon-edit') do  %>   <i class='fa fa-edit'></i> <% end %> </span>
                  </td>
                </tr>
              <% end  %>
            </tbody>
          </table>
          <%= paginate @clients  %>
        </div>
      </div>
    </div>
  </div>
</div>
