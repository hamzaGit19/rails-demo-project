<div class="container">
  This is admin's Dashboard
</div>
<%=render "dashboard/dashboard/partials/search-user"%>
<div class="row">
  <div class=" col-md-2 table-top-headings">
    <h3>Top projects</h3>
    <ol>
      <li>Github clone</li>
      <li>UberXYZ</li>
      <li>Google Glass</li>
      <li>Another project</li>
      <li>Again project</li>
    </ol>
  </div>
  <div class="  col-md-8 ">
    <div class="table-responsive" id="sailorTableArea">
      <table id="sailorTable" class="table table-striped table-bordered" width="100%">
        <%= link_to(register_path, class:"btn btn-primary btn-xs pull-right" )do %><i class="fa fa-user"> Create user</i> <%end%>   
        <thead>
          <tr class="table-top-headings">
            <th>Name</th>
            <th>Email</th>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |person| %>
            <tr class="text-white">
              <td ><%=person.name%></td>
              <td><%=person.email%></td>
              <td><%=person.type%></td>
              <td><%=  person.status == true ? "Active" : "Inactive"%>
              </td>
              <td>
                <span> <%=link_to(edit_admin_user_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-edit"></i> <%end%> </span>
                <span> <%= link_to('Delete',admin_user_delete_path(person), method: :delete, data:{confirm: "are you sure?"} ,class:"btn btn-warning btn-xs glyphicon glyphicon-edit")%></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
