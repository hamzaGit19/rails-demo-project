<p id="notice"><%= notice %></p>
<%=render "dashboard/dashboard/partials/search-user"%>
<div class="row">
  <div class=" col-md-2">
    <h3>Top projects</h3>
    <ol>
      <li>Github clone</li>
      <li>UberXYZ</li>
      <li>Google Glass</li>
      <li>Another project</li>
      <li>Again project</li>
    </ol>
  </div>
  <div class="  col-md-8 ">
    <div class="row">
      <div class="span7">
        <div class="widget stacked widget-table action-table">
          <div class="widget-header">
            <i class="icon-th-list"></i>
          </div>
          <div class="widget-content">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Type</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |person| %>
                  <tr>
                    <td><%=person.name%></td>
                    <td><%=person.email%></td>
                    <td><%=person.type%></td>
                    <td><%=  person.status == true ? "Active" : "Inactive"%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /widget-content -->
        </div>
        <!-- /widget -->
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= column_chart  Project.joins(:payments).limit(5).group(:name).sum(:amount),  stacked: true,label: "Top projects",xtitle: "Project name", ytitle: "Earnings", title: "Top Projects", download: {background: "#3734eb"},  colors: ["#34ebb1", "#34ebb1"] %>
  </div>
  <div class="col-md-6">
    <%= column_chart  Project.joins(:payments).limit(5).group(:name).order("SUM(amount)").sum(:amount), label: "Bottom projects",xtitle: "Project name", ytitle: "Earnings", title: "Bottom projects", download: {background: "#3734eb"},  colors: ["#d65b1e", "#d65b1e"] %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= pie_chart Client.joins(:projects).limit(3).group(:name).count(:id),  donut: true,label: "Top Clients", title: "Top Clients", download: {background: "#3734eb"},  colors: ["#34ebb1", "#d65b1e","#5ef4ff"] %>
  </div>
  <div class="col-md-6">
    <%= pie_chart Employee.where("time_logs.created_at > ?", Time.now-7.days).joins('INNER JOIN time_logs ON users.id = time_logs.employee_id').limit(3).group(:name).count(:hours),  donut: true,label: "Top Performers", title: "Top Perfromers of this week", download: {background: "#3734eb"},  colors: ["#34ebb1", "#d65b1e","#5ef4ff"] %>
  </div>
</div>
