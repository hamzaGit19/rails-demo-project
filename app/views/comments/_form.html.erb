<div class=" comments" id = "comments">
  <div class="comment-wrap", id="create_comment">
    <div class="photo">
      <% if current_user.image? %>
        <%= image_tag current_user.image.thumb.url, class: "rounded-circle", width:"50", height:"50"%>
      <% else %>
        <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/dancounsell/128.jpg')"></div>
      <% end %>
    </div>
    <div class="comment-block">
      <%= form_with(model: @comment, url: comments_url(resource: resource, resource_id: resource_id), remote: true) do |f| %>
        <%= f.text_area :content, rows: 8, required:true, placeholder: "Write a comment here.." %>
        <div class="actions">
          <%= f.submit("Create", class:"btn btn-primary  ")%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'comments/all_comments', locals: {object_:object_}%>