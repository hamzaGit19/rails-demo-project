<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Edit Project</h5>
          <%= form_for(@time_log, url:_url) do |f| %>
           <div class="form-group">
              <label>Hours:</label>
              <%=  f.number_field :hours,class:"form-control", min:0 , required:true%>
              <span class="Error"></span>
            </div>
              <div class="form-group">
            <label>Employee:</label>
              <%= f.select :employee_id,
               @project.employees.all.map { |employee| [employee.name, employee.id] },
               { include_blank: false },
               { multiple:false,class: 'chosen-select form-control' } %>
            </div>
            <%= f.submit("Update", class:"btn btn-primary  btn-block")%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
