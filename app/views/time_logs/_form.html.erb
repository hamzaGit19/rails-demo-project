<div class='container'>
  <div class='row'>
    <div class='col-sm-9 col-md-7 col-lg-5 mx-auto'>
      <div class='card card-signin my-5'>
        <div class='card-body'>
          <%= form_with(model: TimeLog, url:_url,  local: true) do |f| %>
            <% if project.errors.any? %>
              <div id='error_explanation'>
                <h2><%= pluralize(project.errors.count, 'error') %> prohibited this project from being saved:</h2>
                <ul>
                  <% project.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class='form-group'>
              <label>Hours:</label>
              <%= f.number_field :hours,class:'form-control', min:0 , required:true %>
              <span class='Error'></span>
            </div>
            <div class='form-group'>
              <label>Employee:</label>
              <%= f.select :employee_id,
               @project.employees.all.map { |employee| [employee.name, employee.id] },
               { include_blank: false },
               { multiple:false,class: 'chosen-select form-control' } %>
            </div>
            <%= f.submit('Create', class:'btn btn-primary  btn-block') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
