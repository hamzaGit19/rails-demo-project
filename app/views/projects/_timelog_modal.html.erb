<div class=''>
  <button type='button' class='btn btn-danger' data-toggle='modal' data-target='#form2'>
    New Time log
  </button>
</div>
<div class='modal fade' id='form2' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
  <div class='modal-dialog modal-dialog-centered' role='document'>
    <div class='modal-content'>
      <div class='modal-header border-bottom-0'>
        <h5 class='modal-title' id='exampleModalLabel'>Create Account</h5>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <%= form_with(model: TimeLog, url:_url,  remote: true) do |f| %>
        <div class='modal-body'>
          <div class='form-group'>
            <label>Hours:</label>
            <%=  f.number_field :hours,class:'form-control', min:0 %>
            <span class='Error'></span>
          </div>
          <div class='form-group'>
            <label>Employee:</label>
            <%= f.select :employee_id,
               @project.employees.all.map { |employee| [employee.name, employee.id] },
               { include_blank: false },
               { multiple:false,class: 'chosen-select form-control' } %>
          </div>
          <div class='modal-footer border-top-0 d-flex justify-content-center'>
            <%= f.submit('Create', class:'btn btn-primary  btn-block') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
