ADMIN / Client/ index
<div class="col-md-8 ">
  <div class="table-responsive" id="sailorTableArea">
    <table id="sailorTable" class="table table-striped table-bordered" width="100%">
      <%= link_to(new_admin_client_path, class:"btn btn-primary btn-xs pull-right" )do %><i class="fa fa-user"> Create client</i> <%end%>
      <thead>
        <tr class="table-top-headings">
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Company</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |person| %>
          <tr class="text-white">
            <td ><%=person.name%></td>
            <td><%=person.email%></td>
            <td><%=person.phone%></td>
            <td><%= person.company%></td>
            <td>
              <span> <%=link_to(admin_client_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-user"></i> <%end%> </span>
              <span> <%=link_to(edit_admin_client_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-edit"></i> <%end%> </span>
              <span> <%= link_to('Delete',admin_client_path(person), method: :delete, data:{confirm: "are you sure?"} ,class:"btn btn-warning btn-xs glyphicon glyphicon-edit")%></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= paginate @clients %>
    </div>
  </div>
</div>
