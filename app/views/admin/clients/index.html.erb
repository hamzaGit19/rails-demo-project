<p id="notice"><%= notice %></p>
<div class="row">
<%= link_to(new_admin_client_path, class:"btn btn-primary btn-xs pull-right" )do %><i class="fa fa-eye"> Create client</i> <%end%>
</div>

<div class="row">
  <div class="span7">
    <div class="widget stacked widget-table action-table">
      <div class="widget-header">
        <i class="icon-th-list"></i>
        <h3>Projects</h3>
      </div>
      <!-- /widget-header -->
      <div class="widget-content">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Company</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |person| %>
              <tr>
                <td ><%=person.name%></td>
                <td><%=person.email%></td>
                <td><%=person.phone%></td>
                <td><%= person.company%></td>
                <td>
                  <span> <%=link_to(admin_client_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-eye"></i> <%end%> </span>
                  <span> <%=link_to(edit_admin_client_path(person), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-edit"></i> <%end%> </span>
                  <span> <%= link_to('Delete',admin_client_path(person), method: :delete, data:{confirm: "are you sure?"} ,class:"btn btn-warning btn-xs glyphicon glyphicon-edit")%></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= paginate @clients %>
          </div>
        </div>
      </div>
      <!-- /widget-content -->
    </div>
    <!-- /widget -->
  </div>
</div>
