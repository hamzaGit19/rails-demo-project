<p id="notice"><%= notice %></p>
<div class="row">
  <%= link_to(new_admin_project_path, class:"btn btn-primary btn-xs pull-left" )do %><i class="fa fa-eye"> Create project</i> <%end%>
</div>

<div class="row">
  <div class="span7">
    <div class="widget stacked widget-table action-table">
      <div class="widget-header">
        <i class="icon-th-list"></i>
        <h3>Projects</h3>
      </div>
      <div class="widget-content">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Project Name</th>
              <th>Description</th>
              <th>Actions </th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td>
                  <span> <%=link_to(admin_project_path(project), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-eye"></i> <%end%> </span>
                  <span> <%=link_to(edit_admin_project_path(project), class:"btn btn-info btn-xs glyphicon glyphicon-edit") do %>   <i class="fa fa-edit"></i> <%end%> </span>

                  <span> <%= link_to('Delete',admin_project_path(project), method: :delete, data:{confirm: "are you sure?"} ,class:"btn btn-warning btn-xs glyphicon glyphicon-edit")%></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /widget-content -->
    </div>
    <!-- /widget -->
  </div>
</div>
