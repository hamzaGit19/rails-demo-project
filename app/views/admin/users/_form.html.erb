<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Edit</h5>
          <%= form_for(user, url:admin_user_path(@user)) do |form| %>
            <% if user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
 
            <div class="form-group">
              <label>Name</label>
              <%= form.text_field(:name,  class: 'form-control input_user', placeholder: 'Name') %>
            </div>
            <div class="form-group">
              <label>Email</label>
              <%= form.text_field(:email,  class: 'form-control input_user', placeholder: 'Email') %>
            </div>
            <div class="form-group">
              <label>Type of user:</label>
              <%= form.text_field(:type,  class: 'form-control input_user', readonly: true) %>
              <span class="Error"></span>
            </div>
            <div class="form-group">
              <label for="">Status </label>
              <%= form.select :status, options_for_status2, {}, class: 'form-control' %>
              <span class="Error"></span>
            </div>
            <%= form.submit("Update", class:"btn btn-lg btn-primary btn-block text-uppercase")%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
